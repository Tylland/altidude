@model Altidude.net.Models.IndexViewModel
@{
    ViewBag.Title = "Account";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>

<div class="row">
    <div class="col-md-6">
        <h4>Progress</h4>
        <hr />
        <div class="level-box">
            <div class="level-box-content">
                <span class="level-box-text">Level</span>
                <span class="level-box-number" style="font-size:48pt">@Model.Level.Level</span>
                <div>
                    <span class="progress-label">@Model.LevelPoints/@Model.Level.Points XP</span>

                    <div class="progress">
                        <div class="progress-bar" role="progressbar" aria-valuenow="@Model.LevelProgress" aria-valuemin="0" aria-valuemax="100" style="width:@Model.LevelProgress%">
                            <span>&nbsp;</span>
                        </div>
                    </div>
                    <span>Total @Model.ExperiencePoints XP</span>
                </div>
            </div>
        </div>
