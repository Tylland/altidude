@model Altidude.net.Models.ContactUsMessageModel
@{
    ViewBag.Title = "Contact";
}
<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="col-md-8">
        @using (Html.BeginForm("SendContactMessage", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <h3>Send us a message</h3>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "What's your mom call you?" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Email, "Your E-mail", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "col-md-4 form-control", placeholder = "Where can we email you back?" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Message, "Your Message", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextAreaFor(m => m.Message, 5, 10, new { @class = "form-control", placeholder = "What's on your mind?" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-4">
                    <input type="submit" class="btn btn-default" value="Send" />
                </div>
            </div>
        }
    </div>
    <div class="col-md-4">
        <h3>E-mail</h3>
        <hr />
        <div class="col-md-7"><a href="mailto:altidude.net@gmail.com">altidude.net@gmail.com</a><br /></div>
    </div>
</div>
